<Application x:Class="TopPlaces.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TopPlaces"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TitreStyle">
            <Setter Property="Label.FontSize" Value="18" />
            <Setter Property="Label.FontFamily" Value="Lucida Calligraphy" />
        </Style>

        <Style x:Key="ImageStyle">
            <Setter Property="Image.Stretch" Value="Fill"/>
        </Style>

      
    </Application.Resources>
</Application>
